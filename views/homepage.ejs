<% layout('layout/boilerplate') %> 
<main class="container">
    
<div class="col">
    <h1>Add Students Info..</h1>
    <form action="/add/<%= newbranch.Branch %>" class="card validated forms" method="post" required>


            <div class="container mb-3 row" class="card">
            <label for="Prn">Prn</label>
                <input type="number" placeholder="eg.67" name="Prn" required>
            </div>


            <div class="container mb-3 row" class="card">
            <label for="Name">Name</label>
                <input type="text" placeholder="Amadeous" name="Name" required>
            </div>


            <div class="container mb-3 row" class="card">
            <label for="Year">Year</label>
                <input type="text" placeholder="3rd" name="Year" required> 
            </div>


            <div class="container mb-3 row" class="card">
            <label for="Marks">Marks</label>
                <input type="number" placeholder="eg.8" name="Marks" required>
            </div>

        <button class="btn btn-outline-success">Submit</button>
    </form>
    <a href="/showdetails/<%= newbranch.Branch  %>">All students</a>
</div>
   
